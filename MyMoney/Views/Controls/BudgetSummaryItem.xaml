<UserControl x:Class="MyMoney.Views.Controls.BudgetSummaryItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyMoney.Views.Controls" 
             d:DataContext="{d:DesignInstance Type=local:BudgetReportControl}"
             mc:Ignorable="d">
    <Grid>
        <ui:Card VerticalAlignment="Stretch">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="Auto" SharedSizeGroup="Sep1" />
                    <ColumnDefinition Width="Auto" SharedSizeGroup="Budgeted" />
                    <ColumnDefinition Width="Auto" SharedSizeGroup="Sep2" />
                    <ColumnDefinition Width="Auto" SharedSizeGroup="Actual" />
                    <ColumnDefinition Width="Auto" SharedSizeGroup="Sep3" />
                    <ColumnDefinition Width="Auto" SharedSizeGroup="Remaining" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Margin="0,0,8,0" FontSize="16" Text="{Binding Category, 
                           RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                <Separator Grid.Column="1"/>

                <TextBlock Grid.Column="2" Margin="8,0,8,0" FontSize="16" Text="{Binding BudgetedAmount, 
                           RelativeSource={RelativeSource AncestorType=UserControl}}"
                           TextAlignment="Center"/>
                <Separator Grid.Column="3"/>

                <TextBlock Grid.Column="4" Margin="8,0" FontSize="16" Text="{Binding ActualAmount, 
                           RelativeSource={RelativeSource AncestorType=UserControl}}"
                           TextAlignment="Center" />
                <Separator Grid.Column="5"/>

                <TextBlock Grid.Column="6" Margin="8,0,0,0" FontSize="16" Text="{Binding RemainingAmount, 
                           RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}"
                           TextAlignment="Center" Foreground="{Binding RemainingAmountTextColorBrush,
                           RelativeSource={RelativeSource AncestorType=UserControl}}"/>

                <ProgressBar Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="7" IsIndeterminate="False" 
                             Minimum="0" Maximum="100" Margin="0,4,0,0"
                             Value="{Binding ActualAmountPercentage, RelativeSource={RelativeSource AncestorType=UserControl},
                             Mode=OneWay}" Foreground="{Binding PercentageColorBrush, Mode=OneWay,
                             RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            </Grid>
        </ui:Card>
    </Grid>
</UserControl>
