<Page
    x:Class="MyMoney.Views.Pages.BudgetReportsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyMoney.Views.Pages"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:Controls="clr-namespace:MyMoney.Views.Controls"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    d:DataContext="{d:DesignInstance {x:Type local:BudgetReportsPage}, IsDesignTimeCreatable=False}"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Title="BudgetReportsPage"
    SizeChanged="Page_SizeChanged"
>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="Col0" Width="200" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition x:Name="Row0" Height="Auto" />
            <RowDefinition x:Name="Row1" Height="1*" />
            <RowDefinition x:Name="Row2" Height="0" />
        </Grid.RowDefinitions>

        <ui:Card
            x:Name="BudgetsCard"
            Grid.Column="0"
            Grid.RowSpan="2"
            VerticalAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            Margin="0,0,8,24"
        >
            <ui:ListView
                x:Name="BudgetsListView"
                ItemsSource="{Binding ViewModel.Budgets}"
                SelectedItem="{Binding ViewModel.SelectedBudget, Mode=TwoWay}"
                SelectedIndex="{Binding ViewModel.SelectedBudgetIndex}"
            >
                <ui:ListView.ItemTemplate>
                    <DataTemplate>
                        <ui:TextBlock Text="{Binding BudgetTitle}" Margin="5" />
                    </DataTemplate>
                </ui:ListView.ItemTemplate>
            </ui:ListView>
        </ui:Card>

        <Controls:BudgetReportControl
            Grid.Column="1"
            Grid.ColumnSpan="2"
            x:Name="BudgetReport"
            Title="{Binding ViewModel.ReportTitle}"
            IncomeItems="{Binding ViewModel.IncomeItems}"
            ExpenseItems="{Binding ViewModel.ExpenseItems}"
            ReportTotal="{Binding ViewModel.ReportTotal}"
            Margin="8,0,0,8"
            SavingsItems="{Binding ViewModel.SavingsItems}"
        />

        <ui:Card x:Name="IncomeChart" Grid.Column="1" Grid.Row="1" VerticalAlignment="Stretch" Margin="8,8,8,24">
            <lvc:PieChart
                Height="300"
                Series="{Binding ViewModel.ActualIncomeSeries}"
                Title="{Binding ViewModel.ActualIncomeTitle}"
            />
        </ui:Card>

        <ui:Card x:Name="ExpenseChart" Grid.Column="2" Grid.Row="1" VerticalAlignment="Stretch" Margin="8,8,0,24">
            <lvc:PieChart
                Height="300"
                Series="{Binding ViewModel.ActualExpenseSeries}"
                Title="{Binding ViewModel.ActualExpensesTitle}"
            />
        </ui:Card>
    </Grid>
</Page>
