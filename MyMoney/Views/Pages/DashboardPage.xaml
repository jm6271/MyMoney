<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyMoney.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:models="clr-namespace:MyMoney.Core.Models;assembly=MyMoney.Core" 
    xmlns:Controls="clr-namespace:MyMoney.Views.Controls"
    xmlns:helpers="clr-namespace:MyMoney.Helpers"
    x:Class="MyMoney.Views.Pages.DashboardPage"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance {x:Type local:DashboardPage}, IsDesignTimeCreatable=False}"
    d:DesignHeight="900"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <helpers:IsLastItemConverter x:Key="IsLastItemConverter"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Border VerticalAlignment="Stretch" CornerRadius="8" Grid.Row="0">
            <Border.Background>
                <ImageBrush ImageSource="pack://application:,,,/Assets/MyMoney-Banner.png" Stretch="Fill"/>
            </Border.Background>
            <StackPanel VerticalAlignment="Center" Margin="24,0,0,0">
                <StackPanel.Resources>
                    <DropShadowEffect x:Key="TextBlockShadowEffect"
                            ShadowDepth="4"
                            Direction="330"
                            Color="Black"
                            Opacity="0.5"
                            BlurRadius="4"
                            />
                </StackPanel.Resources>
                <ui:TextBlock FontTypography="TitleLarge" Text="MyMoney" Foreground="LightGray" 
                              Effect="{StaticResource TextBlockShadowEffect}"/>
                <ui:TextBlock FontTypography="Title" Text="Personal Finance Software" Foreground="LightGray"
                              Effect="{StaticResource TextBlockShadowEffect}"/>
            </StackPanel>
        </Border>

        <Grid Margin="0,24,0,0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="Col0" Width="*"/>
                <ColumnDefinition x:Name="Col1"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition x:Name="Row0" Height="Auto"/>
                <RowDefinition x:Name="Row1" Height="1*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.ColumnSpan="3" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <!-- Quick overview cards -->
                <ui:Card Margin="0,0,12,0" Height="150" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch">
                    <!-- Net Worth-->
                    <StackPanel>
                        <TextBlock FontSize="18">Net Worth</TextBlock>
                        
                    </StackPanel>
                </ui:Card>
                
                <ui:Card Margin="4,0,8,0" Grid.Column="1" Height="150" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch">
                    <!-- Cash Flow -->
                    <StackPanel>
                        <TextBlock FontSize="18">Cash Flow</TextBlock>
                    </StackPanel>
                </ui:Card>
                
                <ui:Card Margin="8,0,4,0" Grid.Column="2" Height="150" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch">
                    <!-- Budget health -->
                    <StackPanel>
                        <TextBlock FontSize="18">Budget</TextBlock>
                    </StackPanel>
                </ui:Card>
                
                <ui:Card Margin="12,0,0,0" Grid.Column="3" Height="150" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch">
                    <!-- Spending vs. last month -->
                    <StackPanel>
                        <TextBlock FontSize="18">Spending</TextBlock>
                    </StackPanel>
                </ui:Card>
            </Grid>

            <ui:Card Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Margin="0,0,8,0">
                <StackPanel>
                    <ui:TextBlock FontTypography="Subtitle">Budget Overview</ui:TextBlock>

                </StackPanel>
            </ui:Card>

            <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,0,8,0" x:Name="RightPanel">
                <ui:Card Margin="0,0,0,8">
                    <StackPanel>
                        <ui:TextBlock FontTypography="Subtitle" Margin="0,0,0,16">
                            <Run Text="Accounts"/>
                        </ui:TextBlock>
                        <ui:ListView x:Name="AccountsListView" ItemsSource="{Binding ViewModel.Accounts}">
                            <ui:ListView.Resources>
                                <Style x:Key="LastItemTextBlockStyle" TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Value="True">
                                            <DataTrigger.Binding>
                                                <MultiBinding Converter="{StaticResource IsLastItemConverter}">
                                                    <!-- current item -->
                                                    <Binding />
                                                    <!-- the ItemsSource on the nearest ListView -->
                                                    <Binding Path="ItemsSource" 
                                                        ElementName="AccountsListView"/>
                                                </MultiBinding>
                                            </DataTrigger.Binding>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ui:ListView.Resources>
                            <ui:ListView.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:AccountDashboardDisplayItem}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Style="{StaticResource LastItemTextBlockStyle}" Text="{Binding AccountName}" Margin="5,5,0,5" Grid.Column="0"/>
                                        <TextBlock Style="{StaticResource LastItemTextBlockStyle}" Text="{Binding Total}" Margin="0,5,5,5" Grid.Column="1"/>
                                    </Grid>
                                </DataTemplate>
                            </ui:ListView.ItemTemplate>
                        </ui:ListView>
                    </StackPanel>
                </ui:Card>
                <ui:Card Margin="0,8,0,24">
                    <lvc:CartesianChart x:Name="IncomeExpenseChart" Height="350" Series="{Binding ViewModel.Series}" 
                                        XAxes="{Binding ViewModel.XAxes}" YAxes="{Binding ViewModel.YAxes}"
                                        Title="{Binding ViewModel.ChartTitle}"></lvc:CartesianChart>
                </ui:Card>

            </StackPanel>

            <ui:Card Grid.Column="2" Grid.Row="1" VerticalAlignment="Top" Margin="8,0,0,0">
                <StackPanel>
                    <ui:TextBlock FontTypography="Subtitle">Notifications</ui:TextBlock>
                    
                </StackPanel>
            </ui:Card>
        </Grid>
    </Grid>

</Page>
