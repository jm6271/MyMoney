<Application
    x:Class="MyMoney.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    DispatcherUnhandledException="OnDispatcherUnhandledException"
    Exit="OnExit"
    Startup="OnStartup"
>
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>

            <Color x:Key="LayerFillColorDefaultColorLight">#FEFEFE</Color>
            <Color x:Key="LayerFillColorDefaultColorDark">#2C2C2C</Color>
            <Color x:Key="LayerFillColorDefaultColor" />
            <SolidColorBrush x:Key="LayerFillColorDefaultBrush" Color="{DynamicResource LayerFillColorDefaultColor}" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
